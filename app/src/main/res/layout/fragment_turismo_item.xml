<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.applications.fronchetti.cbsoft2016.listview_Turismo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Basilica Nossa Senhora da Gloria"
        android:id="@+id/textTurismoNome"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imageView_turismo"
        android:layout_toStartOf="@+id/imageView_turismo"
        android:textSize="@dimen/letra_grande"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Avenida Tiradentes, Centro"
        android:id="@+id/textTurismoEndereco"
        android:textSize="@dimen/letra_media"
        android:layout_below="@+id/textTurismoNome"
        android:layout_alignLeft="@+id/textTurismoTelefone"
        android:layout_alignStart="@+id/textTurismoTelefone"
        android:layout_toLeftOf="@+id/imageView_turismo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(44) 3227 - 1993"
        android:id="@+id/textTurismoTelefone"
        android:textSize="@dimen/letra_pequena"
        android:layout_below="@+id/textTurismoEndereco"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_turismo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView3"
        android:background="@drawable/map"
        android:layout_below="@+id/textTurismoNome"
        android:layout_alignLeft="@+id/textTurismoNome"
        android:layout_alignStart="@+id/textTurismoNome"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/imageView4"
        android:background="@drawable/phone"
        android:layout_alignBottom="@+id/textTurismoTelefone"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="2dp" />

</RelativeLayout>
