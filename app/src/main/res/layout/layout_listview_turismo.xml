<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.applications.fronchetti.cbsoft2016.listview_Turismo">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/imageView_turismo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="7dp"
        android:background="@android:drawable/sym_def_app_icon" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Basilica Nossa Senhora da Gloria"
        android:id="@+id/textView_turismo"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView_turismo"
        android:layout_alignLeft="@+id/button_turismo_maps"
        android:layout_alignStart="@+id/button_turismo_maps" />


    <info.hoang8f.widget.FButton
        android:id="@+id/button_turismo_maps"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:drawablePadding="0dp"
        android:minHeight="80dp"
        android:minWidth="250dp"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:paddingTop="-3dp"
        android:text="Localização"
        android:textColor="@android:color/white"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="2dp"
        fbutton:buttonColor="#c23737"
        android:textStyle="bold"
        android:textSize="11dp"
        android:drawableLeft="@mipmap/ic_maps"
        android:layout_alignBottom="@+id/imageView_turismo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
